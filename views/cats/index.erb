



<% if logged_in? %>


<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Cati</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="">Profile</a>
        </li>
      </ul>
    <form class="d-flex"  action="/sessions" method="POST">
      <input type="hidden" name = "_method" value="delete">
      <button>Logout</button>
    </form>
    </div>
  </div>
</nav>

<h2 class="h2-header">Welcome to cat dating web-app <%= current_user['first_name'] %></h2>

  
<main class="index-main">
<%# side-bar %>
<section class="side-bar">
  <h3>Search your future solemate</h3>
    <form >
    <div class="form-floating mb-3">
      <input type="text" name="gender" class="form-control" id="floatingInput" placeholder="gender">
      <label for="floatingInput">gender</label>
    </div>
    <div class="form-floating">
      <input type="number" name="age" class="form-control" id="floatingInput" placeholder="age">
      <label for="floatingInput">age</label>
    </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Search</button>
    </form>
    
</section>
    
<%# biger-side %>
  <section class="cats">
    <% cats.each do |cat| %>
      <section class="cat">
        <header>
          <h2><%= cat['name'] %></h2>
          <section class="controls">
           <%# <%= if current_user['id']== %> 
          <a href="/cats/<%= cat['id'] %>/edit">Edit</a>
          <a href="/cats/new">Add cat</a>
          <form action="/cats/<%= cat['id'] %>" method="POST">
            <input type="hidden" name="_method" value="delete">
            <button>Delete</button>
          </form>
          </section>
        </header>
        
        <img src="<%= cat['image_url'] %>" alt="">
        <h2 class="h2-img"><span class="spa">gender : </span><%= cat['gender'] %></h2>
        <h2 class="h2-img"><span class="spa">age : </span><%= cat['age'] %></h2>
      </section>
    <% end %>
  </section>
</main>
<% else %>

  <main class="cover">
    <h1>Cati</h1>
    <p class="lead">Meet beautiful and gorgeous cats around and find your solemate</p>
    <p class="lead">
      <a href="/sessions/new" class="btn btn-lg btn-primary fw-bold border-white bg-red">Login</a>
      <a href="/users/new" class="btn btn-lg btn-primary fw-bold border-white bg-red" >Sign up</a>
    </p>
  </main>
<% end %>

